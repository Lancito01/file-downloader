{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "tauri---svelte",
    "version": "0.1.0",
    "identifier": "com.andy.taurisvelteapp",
    "build": {
        "frontendDist": "../build",
        "devUrl": "http://localhost:5173",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "title": "Andy's File Downloader",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/pikachu.ico"],
        "resources": ["./bin/yt-dlp.exe"]
    }
}
